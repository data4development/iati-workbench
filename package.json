{
  "name": "Spreadsheets2IATI",
  "version": "1.8.2",
  "repository": "github:data4development/iati-workbench",
  "license": "AGPL-3.0-or-later",
  "private": true,
  "devDependencies": {
    "@antora/lunr-extension": "^1.0.0-alpha.8",
    "antora": "^3.0.1",
    "asciidoctor-kroki": "^0.15.4",
    "standard-version": "^9.3.2"
  },
  "scripts": {
    "release:preview": "standard-version -p",
    "release:main": "standard-version",
    "predocs:local": "docker-compose -p antora up -d",
    "docs:local": "antora --attribute kroki-server-url=http://localhost:8000 antora/playbook.yml",
    "docs": "antora antora/playbook.yml"
  },
  "standard-version": {
    "types": [
      {
        "type": "feat",
        "section": "Features"
      },
      {
        "type": "fix",
        "section": "Improvements"
      },
      {
        "type": "improve",
        "section": "Improvements"
      },
      {
        "type": "debt",
        "section": "Debts"
      },
      {
        "type": "risk",
        "section": "Risks and compliance"
      },
      {
        "type": "chore",
        "hidden": true
      },
      {
        "type": "docs",
        "section": "Documentation"
      },
      {
        "type": "style",
        "hidden": true
      },
      {
        "type": "refactor",
        "hidden": true
      },
      {
        "type": "perf",
        "hidden": true
      },
      {
        "type": "test",
        "hidden": true
      }
    ],
    "bumpFiles": [
      "package.json",
      "package-lock.json",
      {
        "filename": "this-is-iati-workbench",
        "type": "plain-text"
      },
      {
        "filename": "docs/antora.yml",
        "updater": "docs/antora-version-updater.js"
      }
    ]
  }
}
