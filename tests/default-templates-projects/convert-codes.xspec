<x:description xmlns:x="http://www.jenitennison.com/xslt/xspec"
               xmlns:xs="http://www.w3.org/2001/XMLSchema"
               xmlns:merge="http://iati.me/merge"
               stylesheet="test-wrapper-default-templates.xslt">

    <x:variable name="reporting-org">XX-TEST</x:variable>

    <x:scenario label="Test code lookups">
        <x:variable name="file">projects</x:variable>

        <x:scenario label="When the project row has no activity status code">
            <x:context>
                <record>
                    <entry name="IATI activity identifier">XX-TEST-1234-ABC</entry>
                    <entry name="Activity status">2</entry>
                </record>
            </x:context>
            <x:expect label="should produce activity-status/@code='2'." test="//activity-status/@code='2'"/>
        </x:scenario>

        <x:scenario label="When the project row has activity status code 2">
            <x:context>
                <record>
                    <entry name="IATI activity identifier">XX-TEST-1234-ABC</entry>
                    <entry name="Activity status">2</entry>
                </record>
            </x:context>
            <x:expect label="should produce activity-status/@code='2'." test="//activity-status/@code='2'"/>
        </x:scenario>

        <x:scenario label="When the project row has activity status text 'implementation'">
            <x:context>
                <csv>
                    <record>
                        <entry name="IATI activity identifier">XX-TEST-1234-T35P147</entry>
                        <entry name="Activity status">implementation</entry>
                    </record>
                </csv>
            </x:context>
            <x:expect label="should produce activity-status/@code='2'." test="//activity-status/@code='2'"/>
        </x:scenario>

        <x:scenario label="When the project row has a separate status activity status code column">
            <x:context>
                <csv>
                    <record>
                        <entry name="IATI activity identifier">XX-TEST-1234-T35P147</entry>
                        <entry name="Activity status">finalisation</entry>
                        <entry name="Activity status code">2</entry>
                    </record>
                </csv>
            </x:context>
            <x:expect label="should use the separate code column." test="//activity-status/@code='2'"/>
        </x:scenario>

    </x:scenario>

</x:description>
